## base
alias aa="vim -R ~/.bash_cfg/alias"
alias c="cd"
alias mv="mv -iv"
alias cp="cp -vr"
alias ex="exit"
alias :q="exit"
alias q="exit"
alias ls="ls -v -F --group-directories-first --color=auto"
alias l="ls"
alias ll="ls -t"
alias lll="ls -l"
alias la="ls -a"
alias lla="ls -la"
alias scp="scp -rp"
alias rsync="rsync -avzuh"
alias lns="ln -nsf"
alias pac="sudo pacman"
alias pip="python3 -m pip"
alias python="python3"
alias rm="echo -e '!!! error !!!\nplease use rmv'"
alias rmf="/usr/bin/rm -rv"
alias r="ranger"

alias gm="git mv"
alias gc="git checkout"
alias gch="git checkout HEAD ."
alias gcma="git commit --amend"
alias gu="git add -u"
alias ga="git add"
alias gall="git add -A"
alias gp="git push"
alias gpl="git pull --rebase"
alias gpull="echo '!! you can use gpl !!' && git pull --rebase"
alias gs="git status"
alias gd="git diff"
alias gdd="git diff --cached"
alias gl="git log --oneline --graph --decorate --name-status"
alias gll="git log -p"
alias gdl="git log --oneline --graph --decorate --diff-filter=D --summary"
alias gr="$alias_bin/grestore.sh"

alias vmake="python3 -m venv .venv"
alias vin="source .venv/bin/activate.fish"
alias von="deactivate"

alias .shutdown="shutdown now"
alias Ssh_Raspi="ssh Raspi"
alias Cfnx3="ssh Cfnx3"
alias deskmini1974="ssh deskmini1974"

alias refile="refilename.py"



