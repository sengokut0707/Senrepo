## alias_cmdで定義されない場合、こちらが適応される
alias cat="cat"
alias vim="vim"
alias vi="vim"

alias gitf="echo 'error!!'"
alias gcm="git commit -m "
alias unar="unar"
alias rmv="echo 'error!!'"
